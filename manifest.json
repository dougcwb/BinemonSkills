{
    "name": "Binemon Skills",
    "version": "0.1",
    "manifest_version" : 2,
    "description": "Binemon Skills at Market frontpage",
    "background" : {
      "scripts" : ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Binemon Skills"
    },
    "content_scripts": [
        {
            "matches": ["https://*.binemon.io/buy/*"],
            "all_frames": true,
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": ["tabs", "activeTab"]
  }